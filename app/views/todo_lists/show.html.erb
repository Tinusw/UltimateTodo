<div ng-app= "todoApp" ng-controller="TodoListCtrl">
  <form class="input-group" ng-submit="addTodo()">
      <input class="form-control input-lg" autofocus="autofucs" type="text" placeholder="describe todo" ng-model="newTodo.title">
      <div class="span input-group-btn">
        <input type="submit" value="+" class="btn btn-success btn-lg">
      </div>
  </form>

  <div ng-repeat="todo in todos">
      <div>
        {{todo.id}}
        {{todo.title}}
        <td>
          <button class="btn btn-danger btn-lg" ng-click="deleteTodo(todo)">
           <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </td>
      </div>
    </div>
  </div>
</div>

