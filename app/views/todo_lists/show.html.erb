<div ng-app="todoApp" ng-controller="TodoListController" ng-init="init(#{@todo_list.id})")>
  <div class="form" id="new_task" ng-submit="addTodo_item()">
    <div class="input-group">
      <input class="form-control input-lg" type="text" autofocus="autofocus" placeholder="Todo Description" ng-model="todo_itemDesc">
        <div class="span input-group-btn">
          <button class="btn btn-primary btn-lg" type="submit">
            Add
          </button>
        </div>
    </div>
  <ul class="list-group">
    <li clas= "list-group-item" ng-repeat="todo_item in todo_items">
      {{todo_item.desc}}
    </li>
  </ul>
</div>