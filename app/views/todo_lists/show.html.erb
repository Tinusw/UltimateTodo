<div ng-app= "todoApp" ng-controller="TodoListCtrl">
  <div ng-repeat="todo in todos">
      <div>
        {{todo.id}}
        {{todo.title}}
      </div>
    </div>

    <form class="form-inline" ng-submit="addTodo()">
      <input value="{{todos[todos.length -1].id + 1}}" ng-model="newTodo.id">
      <input type="text" placeholder="describe todo" ng-model="newTodo.title">

      <input type="submit" value="+" class="btn btn-success">
    </form>
    
    
  </div>
</div>

